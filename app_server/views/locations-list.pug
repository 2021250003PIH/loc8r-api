extends layout
include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
      .error= message
      each location in locations
        .card
          .card-block
            h4
              a(href=`/location/${location._id}`)= location.name
              small &nbsp;
                +outputRating(location.rating)
              span.badge.rounded-pill.badge-default.float-end= location.distance
            p.address.text-light= location.address
            .facilities
              each facility in location.facilities
                span.badge.badge-warning.bg-warning.text-body= facility

    .col-12.col-md-4
      p.lead= sidebar